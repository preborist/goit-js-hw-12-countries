{{#each this}}
<div class="country__wrapper">
    <h1 class="title">
      {{name}}
    </h1>
    <div class="country__info">
      <div>
        <p class="capital"><span class="info__decoration">Capital: </span>{{capital}}</p>
        <p class="population"><span class="info__decoration">Population: </span>{{population}}</p>
        <ul class="languages"><span class="info__decoration">Languages:</span>{{#each languages}}
            <li>{{name}}</li>
            {{/each}}
        </ul>
      </div>
      <div>
    <img src="{{flag}}" alt="country flag" width="320">
      </div>
    </div>
</div>
{{/each}}